<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:layout_marginBottom="8dp"
    card_view:cardUseCompatPadding="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardHeaderBar">

            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#aab4b9"
                android:id="@+id/cardHeaderBarColored"
                android:elevation="16dp" />

            <TextView
                android:text="Card Layout Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardHeader"
                android:textSize="24sp"
                android:textColor="?android:attr/textColorPrimary"
                android:elevation="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp" />
        </RelativeLayout>


        <TextView
            android:text="Hello World!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardSubtitle"
            android:layout_below="@+id/cardHeaderBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="16dp"
            android:paddingTop="8dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            card_view:srcCompat="@drawable/my_logo2"
            android:id="@+id/imageView"

            android:scaleType="fitXY"

            android:elevation="8dp"
            android:adjustViewBounds="true"
            android:layout_below="@+id/cardHeaderBar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
